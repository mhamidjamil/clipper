
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the application.",
          "enum": ["client", "barber"]
        },
        "mobileNumber": {
            "type": "string",
            "description": "The user's mobile phone number."
        },
        "address": {
            "type": "string",
            "description": "The barber's address."
        }
      },
      "required": ["uid", "email", "role"]
    },
    "DaySchedule": {
      "title": "Day Schedule",
      "description": "Defines the working hours for a specific day.",
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "startTime": {
          "type": "string",
          "format": "time"
        },
        "endTime": {
          "type": "string",
          "format": "time"
        }
      }
    },
    "Availability": {
      "title": "Barber Availability",
      "description": "Stores a barber's weekly availability schedule.",
      "type": "object",
      "properties": {
        "barberId": {
          "type": "string",
          "description": "The UID of the barber."
        },
        "slotDuration": {
          "type": "number",
          "description": "Duration of each appointment slot in minutes."
        },
        "schedule": {
          "type": "object",
          "description": "Weekly schedule, with keys as lowercase day names (e.g., 'sunday').",
          "patternProperties": {
            "^(sunday|monday|tuesday|wednesday|thursday|friday|saturday)$": {
              "$ref": "#/entities/DaySchedule"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["barberId", "slotDuration", "schedule"]
    },
    "ServiceCategory": {
      "title": "Service Category",
      "description": "Represents a service offered by a barber.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique ID for the service category."
        },
        "barberId": {
          "type": "string",
          "description": "The UID of the barber offering the service."
        },
        "name": {
          "type": "string",
          "description": "The name of the service (e.g., Haircut, Shave)."
        },
        "duration": {
          "type": "number",
          "description": "The time required for the service in minutes."
        },
        "price": {
          "type": "number",
          "description": "The price of the service in PKR."
        }
      },
      "required": ["id", "barberId", "name", "duration", "price"]
    },
    "Booking": {
      "title": "Booking",
      "description": "Represents a client's booking with a barber.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "barberId": { "type": "string" },
        "clientId": { "type": "string" },
        "clientName": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "time": { "type": "string", "format": "time" },
        "serviceIds": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string", "enum": ["confirmed", "cancelled"] }
      },
      "required": ["id", "barberId", "clientId", "date", "time", "serviceIds", "status"]
    },
    "Chat": {
      "title": "Chat",
      "description": "Represents a chat conversation between two users.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "participants": { "type": "array", "items": { "type": "string" } },
        "lastMessage": {
            "type": "object",
            "properties": {
                "text": { "type": "string" },
                "timestamp": { "type": "object" }
            }
        }
      },
      "required": ["id", "participants"]
    },
    "Message": {
      "title": "Message",
      "description": "Represents a single message within a chat.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "chatId": { "type": "string" },
        "senderId": { "type": "string" },
        "receiverId": { "type": "string" },
        "text": { "type": "string" },
        "timestamp": { "type": "object" },
        "isRead": { "type": "boolean" }
      },
      "required": ["id", "chatId", "senderId", "text", "timestamp", "isRead"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/availability/{barberId}": {
      "schema": {
        "$ref": "#/entities/Availability"
      },
      "description": "Stores the weekly availability for each barber."
    },
    "/services/{serviceId}": {
      "schema": {
        "$ref": "#/entities/ServiceCategory"
      },
      "description": "Stores the services offered by barbers."
    },
    "/bookings/{bookingId}": {
        "schema": {
            "$ref": "#/entities/Booking"
        },
        "description": "Stores booking information for appointments."
    },
    "/chats/{chatId}/messages/{messageId}": {
        "schema": {
            "$ref": "#/entities/Message"
        },
        "description": "Stores messages for a specific chat."
    },
    "/chats/{chatId}": {
        "schema": {
            "$ref": "#/entities/Chat"
        },
        "description": "Stores chat sessions between users."
    }
  }
}
